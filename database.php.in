<?php
/**
 * Database connection parameters and function for VCard testing.
 * @author Eric Vought evought@pobox.com 2014-11-14
 * @license MIT http://opensource.org/licenses/MIT
 * NOTE: database.php is generated by "ant config" from database.php.in
 * with db.properties. Edit the values in db.properties.
 */

  $vcard_dsn = "@db.unittest.dsn@";
  $vcard_username = "@db.unittest.user@";
  $vcard_password = "@db.unittest.passwd@";

  /**
   * Connect to database and return a PDO connection
   */
  function vcard_db_connect()
  {
     global $vcard_dsn, $vcard_username, $vcard_password;

     $connection = new PDO($vcard_dsn, $vcard_username, $vcard_password);

     // set the PDO error mode to exception
     $connection->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);

     return $connection;
  }
?>
